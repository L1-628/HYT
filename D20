#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
void menu()
{
    printf("**************************\n");
    printf("****      1.play      ****\n");
    printf("****      2.exit      ****\n");
    printf("**************************\n");
}
int main()
{
    int intput = 0;
    do
    {
        menu();
        printf("请选择：>");
        scanf("%d", &input);
        switch(input)
        {
        case 1:
            printf("猜数字\n");
            break;
        case 0:
            printf("退出游戏\n");
            break;
        default:
            printf("选择错误，请重新选择\n");
            break;
        }
    }while(input);
    return 0;
}
