#include<iostream>
using namespace std;

//访问权限
//三种
//公共权限 public  成员 类内可以访问 类外也可以访问
//保护权限 protected  成员 类内可以访问 类外不可以访问 儿子可以访问父亲中的保护内容
//私有权限 private  成员 类内可以访问 类外不可以访问  儿子可以访问父亲中的私有 内容

class Person {
public:
	//公共权限
	string name;//姓名

protected:
	//保护权限
	string car;//汽车

private:
	//私有权限
	int password;//银行卡密码

public:
	void func()
	{
		name = "阿迪";
		car = "凯迪拉克";
		password = 123;
	}
};
int main() {

	//实例化具体对象
	Person p1;

	p1.name = "周文迪";

	//p1.car = "大众"; //保护权限内容，在类外访问不到
	//p1.password = 234;//私有权限内容，类外访问不到
	system("pause");
	return 0;
}
