
#include<iostream>
#include<string.h>
using namespace std;

struct student {
	string name;
	int age;
	int score;
};
int main() {
	struct student s1 ;
	student* p = &s1;
	p->name = "张三";
	p->age = 13;
	p->score = 309;
	cout << p->name <<" " <<p->age<<" " << p->score<<endl;
	system("pause");
	return 0;
}
